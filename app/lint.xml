<lint>
    <issue id="UnusedAttribute">
        <ignore path="src/main/AndroidManifest.xml"/>
        <ignore path="src/main/res/layout/*.xml"/>
        <ignore path="src/main/res/transition/*.xml"/>
    </issue>
    <issue id="InvalidPackage">
        <ignore path="*/*"/>
    </issue>
    <!--I am not using them in an ActionBar-->
    <issue id="IconColors">
        <ignore path="*/ic_action_settings.png"/>
    </issue>
    <!-- Butterknife is not able to export itself as an id-type resource consumer-->
    <issue id="UnusedResources">
        <ignore path="*/*.xml"/>
        <ignore regexp="ic_search_suggestion.png"/>
    </issue>
</lint>