<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:twittersdk="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <com.quinny898.library.persistentsearch.SearchBox
        android:id="@+id/search_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="@dimen/search_box_elevation"/>

    <ScrollView
        android:id="@+id/tweet_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="@dimen/tweet_container_elevation"
        android:fadeScrollbars="true"
        android:overScrollMode="never"
        android:requiresFadingEdge="vertical"
        android:scrollbars="vertical">

        <com.twitter.sdk.android.tweetui.TweetView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            twittersdk:tw__tweet_id="302058809675886592"/>

    </ScrollView>
</FrameLayout>