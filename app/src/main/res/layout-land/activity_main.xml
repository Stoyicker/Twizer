<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:ripple="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true">

        <com.andexert.ripple.RippleView
            android:id="@+id/action_settings"
            android:layout_width="?android:actionBarSize"
            android:layout_height="?android:actionBarSize"
            ripple:rv_centered="true"
            ripple:rv_rippleDuration="@integer/ripple_duration_millis"
            ripple:rv_color="?attr/colorAccent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_action_settings"
                android:scaleType="centerInside"
                style="@android:style/Widget.ActionButton"
                android:background="@null"
                android:contentDescription="@string/action_settings"/>

        </com.andexert.ripple.RippleView>
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/logo"
            android:layout_margin="@dimen/logo_margins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_banner"
            tools:ignore="ContentDescription"
            android:scaleType="centerInside"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="false"/>

        <fragment
            android:id="@+id/body"
            android:name="org.jorge.twizer.ui.fragment.ContentFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>
</RelativeLayout>